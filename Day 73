/*
class Node
{
    int data;
    Node next;
}
*/

class Solution {
    // Function to remove a loop in the linked list.
    public static void removeLoop(Node head) {
        // code here
        if(head == null || head.next == null) return;
        
        Node slow = head;
        Node fast = head;
        
        boolean loopExists = false;
        while(fast != null && fast.next != null) {
            slow = slow.next;
            fast = fast.next.next;
            if(slow == fast) {
                loopExists = true;
                break;
            }
        }
        
        if(loopExists) {
            slow = head;
            
            if(slow == fast) {
                while(fast.next != slow) {
                    fast = fast.next;
                }
            }else {
                while(slow.next != fast.next) {
                    slow = slow.next;
                    fast = fast.next;
                }
            }
            
            fast.next = null;
        }
    }
}
